<g:SimpleLayoutPanel ui:field="corePanel">
 <g:FlowPanel>
    <g:HorizontalPanel ui:field="modeSelectionPanel">
      <g:InlineLabel ui:field="ilblMode" text="Mode: "/>
      <g:RadioButton ui:field="rbOvalAdd"/>
      <g:RadioButton ui:field="rbEdgeAdd"/>
      <g:Button ui:field="btnUndo" text="Undo"/>
      <g:Button ui:field="btnRedo" text="Redo"/>
