<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:c='urn:import:com.google.gwt.canvas.client'>
  
<ui:style field="css" src="res/cp_style.css"/>

<!-- *************************************************************************-->
  
<g:HTMLPanel>
  <div ui:field="divRoot" class="{css.cpRoot}">
    
    <div ui:field="divSatVal" class="{css.divSatVal}">
      <c:Canvas ui:field="canvasSatValue" 
        addStyleNames="{css.cpCanvasSatval}"></c:Canvas>
    </div>
    
    <div ui:field="divHue" class="{css.divHue}">
      <c:Canvas ui:field="canvasHue" 
        addStyleNames="{css.cpCanvasHue}"></c:Canvas>
    </div>
    <!--
    <div ui:field="divSelHue" class="{css.divHueSel} {css.outlineOn}"/>
    -->
    <br/>
    
    <div ui:field="divSelSatVal" class="{css.divSatSel}"/>
    
    <div ui:field="divButtons" class="{css.divButtons}">
      <g:Button ui:field="btnOk" text="Ok"/>
      <g:Button ui:field="btnCancel" text="Cancel"/>        
    </div>
    
  </div>
</g:HTMLPanel>
  
</ui:UiBinder>

